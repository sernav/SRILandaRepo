<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<properties resource="database.properties"/>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${database.driver}"/>
				<property name="url" value="${database.url}"/>
				<property name="username" value="${database.username}"/>
				<property name="password" value="${database.password}"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="es.uclm.sri.persistencia.postgre.dao.AlbumsappMapper.xml"/>
		<mapper resource="es.uclm.sri.persistencia.postgre.dao.HistuserMapper.xml"/>
		<mapper resource="es.uclm.sri.persistencia.postgre.dao.UsersappMapper.xml"/>
		<mapper resource="es.uclm.sri.persistencia.postgre.dao.VpesosalbumMapper.xml"/>
		<mapper resource="es.uclm.sri.persistencia.postgre.dao.VpesosuserMapper.xml"/>
	</mappers>
</configuration>